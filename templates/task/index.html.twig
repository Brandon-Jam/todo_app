{% extends 'base.html.twig' %}

{% block title %}Ma To-Do List
{% endblock %}

{% block content %}
	<h1 class="text-danger">üóíÔ∏è Mes t√¢ches</h1>

	<div class="card shadow-sm">
		<div class="card-body">
			<form method="post" action="{{ path('app_task_new') }}" class="d-flex gap-2 mb-3">
				<button type="submit" class="btn btn-success">Ajouter</button>
			</form>

			{% if groupedTasks is empty %}
    <div class="alert alert-info mb-0">Aucune t√¢che pour le moment.</div>
{% else %}

<div class="mb-3 d-flex justify-content-end gap-2 flex-wrap">
    <select id="filterStatus" class="form-select w-auto">
        <option value="all">Tous</option>
        <option value="done">Fait</option>
        <option value="todo">√Ä faire</option>
    </select>
</div>
    <ul class="list-group">
        {% for dateKey, data in groupedTasks %}
            {% set total = data.tasks|length %}
            {% set done = data.doneCount %}

            <li class="list-group-item active">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="fw-bold">
                        {{ data.date|date('d/m/Y') }}
                        {% if dateKey == today %}
                            <span class="badge bg-light text-dark ms-2">Aujourd‚Äôhui</span>
                        {% endif %}
                    </div>
                    <div>
                        <span class="badge bg-success me-1">{{ done }} valid√©e{{ done > 1 ? 's' : '' }}</span>
                        <span class="badge bg-primary">{{ total }} t√¢che{{ total > 1 ? 's' : '' }}</span>
                    </div>
                </div>
            </li>

            {% for task in data.tasks %}
               <li class="list-group-item {{ task.isDone ? 'list-group-item-success' }}"
			       data-status="{{ task.isDone ? 'done' : 'todo' }}"
>
                    <div class="d-flex justify-content-between align-items-center flex-wrap">

                        {# Bouton toggle #}
                        <div class="btn-group btn-group-sm mt-2 mt-md-0 col-1">
                            <form method="post" action="{{ path('app_task_edit', {id: task.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ task.id) }}">
                                <input type="hidden" name="toggle_done" value="1">
                                <button class="btn btn-sm">
                                    <span style="display: inline-block; width: 1.5em; text-align: center;">
                                        {{ task.isDone ? '‚úÖ' : '‚òê' }}
                                    </span>
                                </button>
                            </form>
                        </div>

                        {# D√©tails t√¢che #}
                        <div class="me-auto col-8">
                            <div class="fw-bold">{{ task.title }}</div>
                            <div class="text-muted">{{ task.description }}</div>
                        </div>

                        {# Boutons actions #}
                        <div class="btn-group btn-group-sm mt-2 mt-md-0">
                            <a href="{{ path('app_task_edit', {id: task.id}) }}" class="btn btn-outline-primary d-flex align-items-center justify-content-center">‚úèÔ∏è</a>
                            <form method="post" action="{{ path('app_task_delete', {id: task.id}) }}" class="btn btn-outline-danger d-inline p-0 m-0" onsubmit="return confirm('Supprimer cette t√¢che ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                <button type="submit" class="btn btn-outline-danger border-0 d-flex align-items-center justify-content-center">üóëÔ∏è</button>
                            </form>
                        </div>

                    </div>
                </li>
            {% endfor %}
        {% endfor %}
    </ul>
{% endif %}

		</div>
	</div>

	<script>
document.addEventListener('DOMContentLoaded', () => {
    const filterSelect = document.getElementById('filterStatus');

    filterSelect.addEventListener('change', () => {
        const filterValue = filterSelect.value;

        document.querySelectorAll('ul.list-group').forEach(group => {
            const taskItems = group.querySelectorAll('li.list-group-item:not(.active)');

            taskItems.forEach(item => {
                const status = item.dataset.status;
                item.style.display = (filterValue === 'all' || filterValue === status) ? '' : 'none';
            });
        });
    });
});
</script>
{% endblock %}

