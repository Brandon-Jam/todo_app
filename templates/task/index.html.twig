                            <span class="badge bg-light text-dark ms-2">Aujourdâ€™hui</span>
                        {% endif %}
                    </div>
                    <div>
                        <span class="badge bg-success me-1">{{ done }} validÃ©e{{ done > 1 ? 's' : '' }}</span>
                        <span class="badge bg-primary">{{ total }} tÃ¢che{{ total > 1 ? 's' : '' }}</span>
                    </div>
                </div>
            </li>

            {% for task in data.tasks %}
                <li class="list-group-item {{ task.isDone ? 'list-group-item-success' }}">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">

                        {# Bouton toggle #}
                        <div class="btn-group btn-group-sm mt-2 mt-md-0 col-1">
                            <form method="post" action="{{ path('app_task_edit', {id: task.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ task.id) }}">
                                <input type="hidden" name="toggle_done" value="1">
                                <button class="btn btn-sm">
                                    <span style="display: inline-block; width: 1.5em; text-align: center;">
                                        {{ task.isDone ? 'âœ…' : 'â˜' }}
                                    </span>
                                </button>
                            </form>
                        </div>

                        {# DÃ©tails tÃ¢che #}
                        <div class="me-auto col-8">
                            <div class="fw-bold">{{ task.title }}</div>
                            <div class="text-muted">{{ task.description }}</div>
                        </div>

                        {# Boutons actions #}
                        <div class="btn-group btn-group-sm mt-2 mt-md-0">
                            <a href="{{ path('app_task_edit', {id: task.id}) }}" class="btn btn-outline-primary d-flex align-items-center justify-content-center">âœï¸</a>
                            <a href="{{ path('app_task_show', {id: task.id}) }}" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">ğŸ‘ï¸</a>
                            <form method="post" action="{{ path('app_task_delete', {id: task.id}) }}" class="btn btn-outline-danger d-inline p-0 m-0" onsubmit="return confirm('Supprimer cette tÃ¢che ?');">
